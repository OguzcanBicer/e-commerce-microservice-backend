<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <appender name="logstash" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>localhost:5012</destination>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <version />
                <pattern>
                    <pattern>
                        {
                        "app": "my-app",
                        "timestamp": "%d{yyyy-MM-dd'T'HH:mm:ss.SSSZZ}",
                        "level": "%level",
                        "logger": "%logger",
                        "message": "%message",
                        "thread": "%thread",
                        "stacktrace": "%ex{full}",
                        "mdc": "%mdc"
                        }
                    </pattern>
                </pattern>
                <context />
                <logstashMarkers />
            </providers>
        </encoder>
    </appender>

    <appender name="kafkaAppender" class="com.fmss.commondata.configuration.kafka.KafkaAppender">
        <encoder class="com.fmss.commondata.configuration.kafka.LayoutKafkaMessageEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} | ${HOSTNAME} | %-5level | %logger{80} | [%file:%line] | %thread | %X{traceId:-} | %X{spanId:-} | %msg%n</pattern>
            </layout>
        </encoder>
        <topic>logs</topic>
        <producerConfig>bootstrap.servers=localhost:9094</producerConfig>
    </appender>

    <logger name="com.fmss" level="INFO">
        <appender-ref ref="logstash" />
        <appender-ref ref="kafkaAppender" />
    </logger>
</configuration>